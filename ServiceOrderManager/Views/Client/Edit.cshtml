@model ClientModel


<div class="container mt-5">
    <form method="post" asp-action="Edit" asp-controller="Client" enctype="multipart/form-data">
        <h2>Edição de cliente - @Model.Name</h2>

        <input type="hidden" asp-for="ID" />

        @if (Model.Logo != null)
        {
            <div class="text-center">
                <label for="ImageFile">
                    <img src="/imagem/@Model.Logo" id="img" style="width:150px; height:200px" />
                </label>
            </div>

        }

        <input type="hidden" asp-for="Logo" />

        <div class="mb-1">
            <label class="form-label mt-3">Logo:</label>
            <input type="file" id="ImageFile" name="photo" class="form-control shadow-none" />
        </div>

        <div class="mb-1">
            <label class="form-label">Nome:</label>
            <input type="text" asp-for="Name" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Email:</label>
            <input type="text" asp-for="Email" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Endereço:</label>
            <textarea type="text" asp-for="Address" class="form-control shadow-none"></textarea>
            <span class="text-danger" asp-validation-for="Address"></span>
        </div>
        <div class="mb-1">
            <label class="form-label">CNPJ:</label>
            <input type="number" min="1" step="any" asp-for="Cnpj" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="Cnpj"></span>
        </div>



        <div class="btn-box d-flex mt-3">
            <button type="submit" type="button" class="btn btn-success w-50 mx-1"><i class="bi bi-plus-circle"></i>Editar</button>
            <a type="submit" class="btn btn-info w-50" asp-controller="Client" asp-action="Index"><i class="bi bi-arrow-left-circle"></i>Voltar</a>
        </div>

    </form>
</div>



<script>


    const inputFile = document.querySelector("#ImageFile");

    inputFile.addEventListener("change", function (e) {
        const inputTarget = e.target;
        const file = inputTarget.files[0];

        if (file) {
            const reader = new FileReader();

            reader.addEventListener("load", function (e) {
                const readerTarget = e.target;
                const img = document.querySelector("#img");
                img.src = readerTarget.result;

                const figcaption = document.querySelector("#figcaption");
                figcaption.innerHTML = file.name;
            });

            reader.readAsDataURL(file);
        }
    }


    )
</script>