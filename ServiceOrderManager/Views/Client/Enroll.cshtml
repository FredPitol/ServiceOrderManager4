@using ServiceOrderManager.Dto
@model DtoClientCreator


@* 8. view de cadastro *@
<div class="container mt-5">
    
    @* Fomulario *@
    
    <form method="post" asp-action="Enroll" asp-controller="Client" enctype="multipart/form-data">
        <h2>Cadastro de Cliente</h2>

        <div class="text-center">
            <label for="ImageFile">
                <img id="img" style="width:150px; height:200px" />
            </label>
        </div>

        <div class="mb-1">
            <label class="form-label mt-3">Capa:</label>
            <input type="file" id="ImageFile" name="foto" class="form-control shadow-none" />
        </div>

        <div class="mb-1">
            <label class="form-label">Nome:</label>
            <input type="text" asp-for="Name" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">CNPJ:</label>
            <textarea type="text" asp-for="Cnpj" class="form-control shadow-none"> </textarea>
            <span class="text-danger" asp-validation-for="Cnpj"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Email:</label>
            <input type="text" min="1" step="any" asp-for="Email" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Endereço:</label>
            <input type="text" min="1" step="any" asp-for="Address" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="Address"></span>
        </div>

        @* botoes  *@

        <div class="btn-box d-flex mt-3">
            <button type="submit" type="button" class="btn btn-success w-50 mx-1"><i class="bi bi-plus-circle"></i> Cadastrar!</button>
            <a type="submit" class="btn btn-info w-50" asp-controller="Pizza" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> Voltar</a>
        </div>


    </form>

</div>
<script>


    const inputFile = document.querySelector("#ImageFile");

    inputFile.addEventListener("change", function (e) {
        const inputTarget = e.target;
        const file = inputTarget.files[0];

        if (file) {
            const reader = new FileReader();

            reader.addEventListener("load", function (e) {
                const readerTarget = e.target;
                const img = document.querySelector("#img");
                img.src = readerTarget.result;

                const figcaption = document.querySelector("#figcaption");
                figcaption.innerHTML = file.name;
            });

            reader.readAsDataURL(file);
        }
    }


    )
</script>