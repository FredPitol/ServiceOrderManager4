@using ServiceOrderManager.Dto
@model DtoOsCreator

<div class="container mt-5">
  
    <form method="post" asp-action="Enroll" asp-controller="Os" enctype="multipart/form-data">
        <h2>Cadastro de Serviço</h2>

        <div class="mb-1">
            <label class="form-label">Nome:</label>
            <input type="text" asp-for="Name" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Custo do Serviço:</label>
            <input type="number" asp-for="ServiceCost" class="form-control shadow-none" step="0.01">
            <span class="text-danger" asp-validation-for="ServiceCost"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Data de Execução:</label>
            <input type="datetime-local" asp-for="ExecutionDate" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="ExecutionDate"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">CPF do Prestador de Serviço:</label>
            <input type="text" asp-for="ServiceProviderCpf" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="ServiceProviderCpf"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Nome do Prestador de Serviço:</label>
            <input type="text" asp-for="ServiceProviderName" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="ServiceProviderName"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Função do Prestador de Serviço:</label>
            <input type="text" asp-for="ServiceProviderRole" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="ServiceProviderRole"></span>
        </div>

        <div class="btn-box d-flex mt-3">
            <button type="submit" class="btn btn-success w-50 mx-1"><i class="bi bi-plus-circle"></i> Cadastrar </button>
            <a class="btn btn-info w-50" asp-controller="Os" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> Voltar </a>
        </div>
    </form>
</div>

</div>
<script>


    const inputFile = document.querySelector("#ImageFile");

    inputFile.addEventListener("change", function (e) {
        const inputTarget = e.target;
        const file = inputTarget.files[0];

        if (file) {
            const reader = new FileReader();

            reader.addEventListener("load", function (e) {
                const readerTarget = e.target;
                const img = document.querySelector("#img");
                img.src = readerTarget.result;

                const figcaption = document.querySelector("#figcaption");
                figcaption.innerHTML = file.name;
            });

            reader.readAsDataURL(file);
        }
    }


    )
</script>